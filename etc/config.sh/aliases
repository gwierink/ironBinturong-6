alias toolShed='cd $WM_TS_PROJECT_DIR'
alias toolShedtut='cd $WM_TS_TUT_DIR'
alias toolShedapp='cd $WM_TS_APP_DIR'
alias toolShedsol='cd $WM_TS_SOL_DIR'
alias toolShedutil='cd $WM_TS_UTIL_DIR'
alias toolShedsrc='cd $WM_TS_SRC_DIR'
alias toolShedetc='cd $WM_TS_ETC_DIR'

alias foam3rdParty='cd $WM_THIRD_PARTY_DIR'

